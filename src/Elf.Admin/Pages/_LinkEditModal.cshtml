<!-- Link Edit Modal -->
<div class="modal fade" id="linkEditModal" tabindex="-1" aria-labelledby="linkEditModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="linkEditModalLabel">Create Link</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="linkEditForm">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label for="originUrl" class="form-label">Origin URL <span class="text-danger">*</span></label>
                                <input type="url" class="form-control" id="originUrl" name="originUrl" required maxlength="256" placeholder="https://example.com">
                                <div class="invalid-feedback" id="originUrlError"></div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="ttl" class="form-label">TTL (seconds)</label>
                                <input type="number" class="form-control" id="ttl" name="ttl" min="0" max="86400" value="0" placeholder="0">
                                <div class="form-text">0 = no expiration, max 24 hours</div>
                                <div class="invalid-feedback" id="ttlError"></div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="akaName" class="form-label">Aka Name</label>
                                <input type="text" class="form-control" id="akaName" name="akaName" maxlength="32" placeholder="custom-alias" pattern="(?!-)([a-z0-9-]+)">
                                <div class="form-text">Only lowercase letters, numbers, and hyphens (not at start/end)</div>
                                <div class="invalid-feedback" id="akaNameError"></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="tags" class="form-label">Tags</label>
                                <input type="text" class="form-control" id="tags" name="tags" placeholder="tag1, tag2, tag3">
                                <div class="form-text">Comma-separated tags</div>
                                <div class="invalid-feedback" id="tagsError"></div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label for="note" class="form-label">Note</label>
                                <textarea class="form-control" id="note" name="note" rows="2" placeholder="Optional description or note about this link"></textarea>
                                <div class="invalid-feedback" id="noteError"></div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <div class="form-check form-switch mt-4">
                                    <input class="form-check-input" type="checkbox" id="isEnabled" name="isEnabled" checked>
                                    <label class="form-check-label" for="isEnabled">
                                        Enable Link
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                
                <!-- Error Alert -->
                <div id="modalErrorAlert" class="alert alert-danger d-none" role="alert">
                    <i class="bi bi-exclamation-triangle"></i>
                    <span id="modalErrorMessage"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveLinkBtn">
                    <span class="spinner-border spinner-border-sm d-none" id="saveSpinner" role="status" aria-hidden="true"></span>
                    Save
                </button>
            </div>
        </div>
    </div>
</div>